body {
  font-family: 'Roboto', sans-serif;
  font-style: normal;
  font-weight: 400;
}
p {
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  margin-bottom: 1.25rem;
  text-rendering: optimizeLegibility;
}
a {
  color: #2c7ef0;

  text-decoration: none;

  &:hover {
    color: #1552a8;
  }
}
@font-face {
  font-family: Roboto;
  src: url(https://fonts.googleapis.com/css?family=Roboto);
}