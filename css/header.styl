    width: 20px;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    margin: 0 15px 0 0;
    display: block;
    cursor: pointer;

    &._facebook {
      background-image: url("../img/face1.svg");

      &:hover {
        background-image: url("../img/face.svg");
      }
    }
    &._twitter {
      background-image: url("../img/twit1.svg");
      &:hover {
        background-image: url("../img/twit.svg");
      }
    }
    &._google {
      background-image: url("../img/goo1.svg");
      height: 22px;
      width: 22px;
      &:hover {
